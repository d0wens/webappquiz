<section>
  <% @surveys.each do |survey| %>
    <% if survey.due_date.past? %>
      <div class="field">
      <%= survey.name %>
      No longer accepted.
      <% if survey_completed?(current_user, survey) %>
      <%= link_to "Show", take_survey_path(survey.id) %>
      <% end %>
    </div>
    <% else %>
    <div class="field">
      <%= survey.name %>
      <% unless survey_completed?(current_user, survey) %>
        <%= link_to "Take", new_take_surveys_path(survey.id) %>
      <% else %>
        Completed.
      <% end %>
      <%= link_to "Show", take_survey_path(survey.id) %>
      <%= link_to "Edit", new_take_surveys_path(survey.id) %>
    </div>
  <% end %>
  <% end %>
</section>
