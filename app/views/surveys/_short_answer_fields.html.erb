<div class="fields">
  <p>
    <%= f.label :content, "Question" %>
    <%= link_to_remove_fields "remove", f %><br />
    <%= f.text_area :content, :rows => 3 %><br /> 
    <%= f.label :content, "Point Value" %>
    <%= f.text_area:points, :rows => 1 %><br />
    <%= f.radio_button :allow_free_response, true, :checked => true, :hidden => true %>

  </p>
  <%= f.fields_for :answers do |builder| %>
    <%= render 'answer_fields_hidden', :f => builder %>
    <% end %>
    <p class="add_answer">
      <%= link_to_add_hidden_answers "Add Answer", f, :answers %>
    </p>
</div>