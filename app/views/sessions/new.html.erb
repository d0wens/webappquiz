<% #SPEC: 1.0: Login Screen %>
<%= title "Log In" %>
<div class="center">
  <section id="sessions_new">
    <%= markdown "##CMSC421<br />Management System" %>
    <%= markdown "###Please Login" %>
    <%= form_tag sessions_path, :id => "new_sessions_form" do %>
      <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email,  params[:email], :class => "input", :size => "30" %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password, nil, :class => "input", :size => "30"  %>
      </div>
      <div class="field">
        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %><br />
        <%= link_to "Forgot password?", new_password_reset_path %>
      </div>
      <div class="actions">
        <%= submit_tag "Sign In" %>
      </div>
    <% end %>
  </section>
</div>
