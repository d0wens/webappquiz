<div class="center">
  <section id="user_form_partial">
<%= form_for @user, :method => :put, :url => update_user_password_path do |f|%>
  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Change Password" %>
  </div>
<% end %>
</section>
</div>
